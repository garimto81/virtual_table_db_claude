#!/usr/bin/env python3
"""
Aiden Test Command - Main entry point
"""
import os
import sys

# Add current directory to Python path
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

# Import and run the advanced test
try:
    from aiden_test_advanced import AdvancedAidenTest
    tester = AdvancedAidenTest()
    exit_code = tester.run_all_tests()
    sys.exit(exit_code)
except ImportError:
    # Fallback to basic test
    from aiden_test import AidenTest
    tester = AidenTest()
    exit_code = tester.run_all_tests()
    sys.exit(exit_code)